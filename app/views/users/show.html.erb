<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


  <body>

<div class="col-xs-3">
<h2>User info</h2>

 <%= attachment_image_tag @user, :profile_image, :fill, 100, 100,fallback: "no_image.jpg",size: '100x100' %>
 
      
<table class="table">
<tbody>
       <tr>
            <th>name</th>
            <th><%= @user.username %></th>
        </tr>
   
    <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
    </tr>    
       <tr>
        <th>
         <% if @user.id == current_user.id %>
            <%= link_to "",edit_user_path(@user), class:"glyphicon glyphicon-wrench edit_user_#{@user.id}	"%>
            <% end %>
          </th>  
        </tr>
         
    
  </tbody>  
  
</table>


    <h3>New books</h3>

    <%= form_for(@book) do |f| %>
    <h4> Title</h4> 
    <%= f.text_field :title,class:"book_title" %>
 
   <h4> Body</h4>
    <%= f.text_area :body,class:"book_body"  %>
   <br> <%= f.submit 'Create Book' %> </br>


<% end %>
</div>

<div class="col-xs-9">
 <h2> Books</h2>
 <table class="table table-hover table-inverse">
     <thead>
      <tr>
       <th> </th>
       <th>Title</th>
       <th>Option</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     
     <tbody>
     
      <% @user.books.each do |book| %>
      <tr>
       <td>
         <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40,fallback: "no_image.jpg",size: '40x40' %>
       </td>
  
  
       <td>
        <%=link_to book.title,book_path(book),class: "book_#{book.id}" %>
       </td>
       <td>
        <%= book.body %>
       </td>
       
      
        <% end %>
         </tr>
     </tbody>
    </table>
    </div>