
<div class="col-xs-3">
<h2>User info</h2>

 <%= attachment_image_tag @user, :profile_image, :fill, 20, 20,fallback: "no_image.jpg" %>
      
<table class="table">
<tbody>
       <tr>
            <th>name</th>
           <th><%= @user.username %></th> 
        </tr>
   
    <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
    </tr>    
       <tr> <%= link_to "",edit_user_path(@user), class:"glyphicon glyphicon-wrench edit_user_#{@user.id}"%> </tr>
         
    </tr>
  </tbody>  
  
</table>

    <h3>New books</h3>

    <%= form_for(@book) do |f| %>
    <h4> Title</h4> 
    <%= f.text_field :title,class: "book_title" %>
 
   <h4> Opinion</h4>
    <%= f.text_area :body,class:"book_body"  %>
   <br> <%= f.submit 'Create Book' %> </br>
   <% end %>
</div>
   
   <table class="table table-striped">
      <thead>
        <div class="col-xs-9">
     <h3> User</h3>
      <tr>
          <th>image</th>
       <th>name</th>
       <th></th>
       <th colspan="3"></th>
      </tr>
     </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
       <td>
         <%= attachment_image_tag user, :profile_image, :fill, 20, 20,fallback: "no_image.jpg" %>
       </td>
       <td>
        <%= user.username %>
       </td>
       <td>
           <%= link_to"show",user_path(user),class:"user_#{user.id}" %>
       </td>
        <% end %>
      </tr>
         
     </tbody>
  </table>
</div>
</body>
